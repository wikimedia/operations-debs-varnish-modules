varnishtest "Test softpurge vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import softpurge from "${vmod_builddir}/.libs/libvmod_softpurge.so";
	sub vcl_miss {
		softpurge.softpurge();
		return (synth(760, "purged ok"));
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.status == 760
} -run
